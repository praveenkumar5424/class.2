public class rowplus {
   public static void main(String[] args) {
      Scanner sc =new Scanner(System.in);
        System.out.println("Enter the Limit");
        int n = sc.nextInt(); 
        for (int row=1;row<=n;row++){
            for (int col=1;col<=n-row;col++)
            System.out.print(" ");
            for (int col=1;col<=row;col++){
                System.out.print( "*");           
            }
            System.out.println();
        } 
        sc.close();
   }
}

