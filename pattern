import java.util.Scanner;

public class reverseorder {
    public static void main(String[] args) {
      Scanner abc=new Scanner(System.in);
      int n=abc.nextInt();
      int dig=0;
      while (n>0) {
        dig=n%10;
        System.out.print(dig+" ");
        n=n/10;
        abc.close();
        
      }
    }
    
}

